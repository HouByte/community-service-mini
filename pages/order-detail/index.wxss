.container{
    font-size: 28rpx;
    padding-bottom: 200rpx;
}

.address,.chat,.rating-detail{
    margin-top: 30rpx;
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx 30rpx;
}

.address{
    display: flex;
    align-items: center;
}

.address-info{
    margin-left: 30rpx;
    margin-top: 10rpx;
    display: flex;
    flex-direction: column;
}

.contact-info{
    margin-top: 10rpx;
    color: #888888;
}

.order-preview,.order-info{
    margin-top: 30rpx;
}

.rating-label{
    padding-bottom: 20rpx;
    margin-bottom: 30rpx;
    border-bottom: 1px solid #efefef;
    font-weight: bold;
}


.action-bar {
    box-sizing: border-box;
    border-top: 1px solid #efefef;
    background-color: #fff;
    padding: 30rpx 30rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    z-index: 2;
}