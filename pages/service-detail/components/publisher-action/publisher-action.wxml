<view class="action-bar-item ">
    <i-button wx:if="{{service.status !== serviceStatusEnum.PUBLISHED && service.status !== serviceStatusEnum.PENDING}}"
              bgColor="#44cef6" shape="semicircle" border bind:tap="handleEditService"
    >
        修改服务
    </i-button>
    <i-button wx:if="{{service.status === serviceStatusEnum.PUBLISHED||service.status === serviceStatusEnum.PENDING}}"
              shape="semicircle" bind:tap="handleUpdateStatus" data-action="{{serviceActionEnum.PAUSE}}"
    >
        下架服务
    </i-button>
    <i-button wx:if="{{service.status === serviceStatusEnum.UNPUBLISHED}}"
              shape="semicircle" bind:tap="handleUpdateStatus" data-action="{{serviceActionEnum.PUBLISH}}"
    >
        发布
    </i-button>
</view>